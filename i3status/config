# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    markup = "pango"
    colors = true
    color_good = "#98971a"
    color_degraded = "#d79921"
    color_bad = "#b16286"
    interval = 1
    separator = "|"
}

order += "read_file dictation"
order += "wireless _first_"
order += "ethernet proton"
order += "battery all"
order += "tztime local"

read_file dictation {
  path = "/tmp/nerd-dictation-status"
  format = "%content"
  format_bad = ""
}

wireless _first_ {
    format_up = "W: %ip"
    format_down = "W: down"
}

ethernet proton {
  format_up = "VPN: on"
  format_down = "VPN: off"
}

battery all {
    format = "%status %percentage %remaining"
    format_percentage = "%.00f%s"
}

tztime local {
    format = "%Y-%m-%d %a %H:%M"
}
